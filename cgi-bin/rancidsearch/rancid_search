# Load libs
use File::Glob;

# Change vars
my $path="/var/lib/rancid";
my $full_path="$path/*/configs";

################### DO NOT CHANGE NOW ###################

# Function to delete duplicated lines
sub Array_uniq
{
	my @List = @_;
	my %FutureList;
	foreach(@List)
	{
		$FutureList{$_} = 1; 
	}
	return (keys(%FutureList));
}

# Read entry
read(STDIN, $in, $ENV{CONTENT_LENGTH});

# Declaration
my $regex;
my $isreg;
my $sensitive;
my $uniq;
my $summary;
my $frame;

# Check what has been requested
# Sensitive and uniq checkbox
if(($ENV{QUERY_STRING} eq "jira") or ($ENV{QUERY_STRING} eq "rancid") or ( $ENV{QUERY_STRING} eq "confluence") or ( $ENV{QUERY_STRING} eq "syslog"))
{
	$frame=$ENV{QUERY_STRING};
}
if(($in =~ /search=(.*)?(&uniq)/) or ($in =~ /search=(.*)?(&sensitive)/))
{
	$regex=$1;
}
# Searchbox
elsif ($in =~ /search=(.*)/)
{
	$regex=$1;
}
# Sensitive checkbox
if($in =~ /&sensitive=(.*)/)
{
	$sensitive="yes";
}
# Uniq checkbox
if($in =~ /&uniq=(.*)/)
{
	$uniq="no";
}
# Empty searchbox field
if($regex eq "")
{
	$isreg="Thisisnotatrueregex";
}
my @results;
my @location;
my $foundtotal=0;
my $found=0;
my @listfile=glob("$full_path/*");


# Change regex to avoid coding metachars
$regex =~ s/%5C/\\/g;
$regex =~ s/%5B/[/g;
$regex =~ s/%5D/]/g;
$regex =~ s/\+/ /g;
$regex =~ s/%7B/{/g;
$regex =~ s/%7D/}/g;
$regex =~ s/%2B/\+/g;
$regex =~ s/%22/"/g;
$regex =~ s/%27/'/g;
$regex =~ s/%21/!/g;
$regex =~ s/%3F/?/g;
$regex =~ s/%3B/;/g;
$regex =~ s/%3A/:/g;
$regex =~ s/%2F/\//g;
$regex =~ s/%2C/,/g;
$regex =~ s/%5E/^/g;
$regex =~ s/%24/\$/g;
$regex =~ s/%25/%/g;
$regex =~ s/%A7/ยง/g;
$regex =~ s/%3D/=/g;
$regex =~ s/%40/@/g;
$regex =~ s/%23/#/g;
$regex =~ s/%3C/</g;
$regex =~ s/%3E/>/g;
$regex =~ s/%7C/|/g;

# HTML headers
print("Content-Type: text/html\n\n");
print <<"HEREDOC";
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
